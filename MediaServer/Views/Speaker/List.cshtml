@model Speaker[]
<div class="col-lg-12">
    <div class="d-flex">
        <h1 class="mt-4">@ViewData["Title"]</h1>
    </div>
    <ul class="list-group mt-2">
    @foreach (var speaker in Model)
    {
        <li class="list-group-item">
            <div class="media align-items-center">
                <a href="@speaker.Name"><img class="mr-3 align-self-center img-thumbnail b-lazy" width="40" height="40" src="/Transparent.gif" data-src="@speaker.ProfileImageUrl" alt="@speaker.Name" title="@speaker.Name"></a>
                <div class="media-body d-flex justify-content-between align-items-center">
                    <h4 class="mb-1"><a href="@speaker.Name">@speaker.Name</a></h4>
                    <span class="badge badge-primary badge-pill">@speaker.TalkCount</span>
                </div>
            </div>
        </li>
    }
    </ul>
</div>